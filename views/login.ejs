<link rel="stylesheet" href="/style/stylesheet.css">

<style>
    body {
    background-color: #01baef; 
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    margin: 0;
}

.container {
    background-color: white;
    padding-top: 20px; 
    padding-right: 80px;
    padding-bottom: 80px; 
    padding-left: 60px;
    border-radius: 32px;
    margin-top: 10px;
}
</style>
<body>
    <div style="display: flex; flex-direction: column; align-items: center; justify-content: flex-start; height: 100vh; margin-top: 10px;">
        <h1 style ='font-size: 95px; color: white; margin-bottom: 20px;' >splitco</h1>
        <div class="container">
            <h1 style ='font-size: 55px; text-align: center; margin-bottom: 15px;'>Login</h1>
            <% if (messages.error) { %>
                <%= messages.error %>
            <% } %>
            <form action="/login" method="POST" style="text-align: center;">
                <div>
                    <label for="email" class="label-style">Email</label>
                    <input type="email" id="email" name="email" placeholder="EMAIL" style="margin-left: 10px; margin-bottom: 15px; font-size: 20px; border: 2px solid black" required>
                </div>
                <div>
                    <label for="password" class="label-style">Password</label>
                    <input type="password" id="password" name="password" placeholder="PASSWORD" style="margin-left: 10px; margin-bottom: 15px; font-size: 20px; border: 2px solid black" required>
                </div>
                <div style="display: flex; justify-content: center;">
                    <a href="/register" class="button-style">Register</a>
                    <button type="submit" class="button-style">Login</button>
                </div>
            </form>
        </div>
    </div>
</body>